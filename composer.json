{
    "name": "nandan108/dto-toolkit",
    "description": "A modern, framework-agnostic PHP 8.1+ DTO system with attribute-driven data normalization and mapping to entities or arrays.",
    "type": "library",
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "php": "^8.1",
        "phpunit/phpunit": "^10.0",
        "symfony/var-dumper": "^6.0 || ^7.0",
        "mockery/mockery": "^1.6",
        "vimeo/psalm": "^6.10",
        "nunomaduro/collision": "^6.4",
        "friendsofphp/php-cs-fixer": "^3.75"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Nandan108\\DtoToolkit\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nandan108\\DtoToolkit\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Samuel de Rougemont",
            "email": "nandan108@gmail.com"
        }
    ],
    "scripts": {
        "cs-fix": "./vendor/bin/php-cs-fixer fix",
        "psalm": "./vendor/bin/psalm",
        "test": "./vendor/bin/phpunit",
        "testAndCover": "./vendor/bin/phpunit --coverage-text --coverage-html coverage"
    },
    "minimum-stability": "stable"
}
