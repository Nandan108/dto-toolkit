{
    "name": "nandan108/symfony-dto-toolkit",
    "description": "Modern PHP 8.1+ DTO system for Symfony, supporting attribute-driven input validation, normalization, and mapping to entities or array output",
    "type": "library",
    "require": {
        "php": "^8.1",
        "symfony/validator": "^6.0 || ^7.0",
        "symfony/http-foundation": "^6.0 || ^7.0",
        "symfony/http-kernel": "^6.0 || ^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "symfony/var-dumper": "^6.0 || ^7.0",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.5",
        "vimeo/psalm": "^6.10"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Nandan108\\SymfonyDtoToolkit\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Samuel de Rougemont",
            "email": "nandan108@gmail.com"
        }
    ],
    "scripts": {
        "psalm": "./vendor/bin/psalm",
        "test": "./vendor/bin/phpunit",
        "testAndCover": "./vendor/bin/phpunit --coverage-text --coverage-html coverage"
    },
    "minimum-stability": "stable"
}
